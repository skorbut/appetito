%h1 Neuer Eintrag
=form_for @meal do |f|
  %fieldset#new_meal
    %legend Neue Mahlzeit eingeben
    %ol
      %li
        =f.label :name
        =f.text_field :name
      %li
        =f.label :date
        =f.date_select :date, :order => [:day, :month, :year]
      %li
        =f.label :type_of_meal
        =f.select :type_of_meal, Meal.type_of_meal.options
      %li
        =f.submit "Create"
