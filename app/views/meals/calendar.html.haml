%section#calendar
  %header#calendar_header
    %h2
      =link_to "<",calendar_meals_path(:month => @month-1.month)
      = I18n.l @month, :format => '%B, %Y'
      =link_to ">",calendar_meals_path(:month => @month+1.month)
  %table
    %tr
      %th Mo
      %th Di
      %th Mi
      %th Do
      %th Fr
      %th Sa
      %th So
    - @days.each_with_index do |day,i|
      - if i%7==0
        %tr
      %td
        = render partial: "calender_meal", :locals => { :day => day, :month => @month}
